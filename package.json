{
  "name": "sheetmate",
  "version": "0.1.1",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "yarn start:electron",
    "start:web": "env-cmd -f .env.web craco start",
    "start:electron": "electron .",
    "start:electron-dev": "electron electron-dev.js",
    "build": "yarn build:electron",
    "build:web": "craco build",
    "build:electron": "env-cmd -f .env.electron craco build",
    "watch:electron": "npm-watch",
    "test": "craco test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "watch": {
    "build:electron": "src/**/*.*"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@craco/craco": "^5.6.1",
    "@types/jest": "24.0.21",
    "@types/node": "12.12.3",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.3",
    "electron": "^7.0.0",
    "electron-builder": "^22.1.0",
    "env-cmd": "^10.0.1",
    "npm-watch": "^0.6.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0",
    "typescript": "3.6.4"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:mehrad77/SheetMate.git"
  },
  "keywords": [
    "D&D,RPG-game"
  ],
  "author": "Mehrad Rousta <mehrad@gmail.com> (https://jourlog.xyz/)",
  "license": "MIT"
}